package com.internousdev.myec.action;

import java.util.List;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.myec.dao.BuyItemDAO;
import com.internousdev.myec.dto.BuyItemDTO;
import com.opensymphony.xwork2.ActionSupport;

public class MyPageMovementAction extends ActionSupport implements SessionAware{

	public Map<String, Object> session;
	private BuyItemDAO buyItemDAO = new BuyItemDAO();
	private List<BuyItemDTO> buyItemDTOList;

	public String execute(){

		//ログインしていなければホームへ戻る
		String result = ERROR;


		//管理者IDでログイン時は管理者ページへ飛ばす
		if(session.containsKey("masterId")){
			buyItemDTOList = buyItemDAO.getBuyItemInfo();
			session.put("buyItemDTOList", buyItemDTOList);

			result = "master";
		}


		//ログイン済（idを持っている）時は購入ページへ飛ばす
		else if (session.containsKey("id")){

			// アイテム情報を取得
			buyItemDTOList = buyItemDAO.getBuyItemInfo();
			session.put("buyItemDTOList", buyItemDTOList);

			result = SUCCESS;

		}

		//結果を返す
		return result;
	}

	@Override
	public void setSession(Map<String, Object> arg0) {
		// TODO 自動生成されたメソッド・スタブ

	}
}
