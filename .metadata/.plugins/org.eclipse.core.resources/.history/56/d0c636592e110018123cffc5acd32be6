package com.internousdev.myec.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Map;

import com.internousdev.myec.util.DBConnector;

public class InquiryConfirmDAO {

	private DBConnector dbConnector = new DBConnector();

	private Connection connection = dbConnector.getConnection();

	private boolean result;

	public Map<String, Object> session;


	//実行メソッド

	public boolean getInquiryInfo(String inquiry_name,String inquiry_mail){

		String sql = "SELECT * FROM inquiry";

		try{
			PreparedStatement ps = connection.prepareStatement(sql);
			ResultSet rs = ps.executeQuery();

			while(rs.next()){

				String inquiryName = rs.getString("inquiry_name");
				String inquiryMail = rs.getString("inquiry_mail");
				String inquiryBody = rs.getString("body");

				if(inquiryName.equals("") || inquiryMail.equals("") || inquiryBody.equals("")){

					result = false;

				}else{

					result = true;
				}
			}

		}catch(Exception e){

			e.printStackTrace();

		}

		return result;
	}


	public DBConnector getDbConnector() {
		return dbConnector;
	}


	public void setDbConnector(DBConnector dbConnector) {
		this.dbConnector = dbConnector;
	}


	public Connection getConnection() {
		return connection;
	}


	public void setConnection(Connection connection) {
		this.connection = connection;
	}


	public boolean isResult() {
		return result;
	}


	public void setResult(boolean result) {
		this.result = result;
	}

	public Map<String, Object> getSession() {
		return session;
	}

	public void setSession(Map<String, Object> session) {
		this.session = session;
	}

}
